<% if @flight.present? %>
  <% if @flight.errors.any? %>
    <% @flight.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new flight
</h1>


<hr>

<form action="/create_flight" method="post">

  <div class="form-group">
    <label for="depart_at">
      Depart at
    </label>

    <input type="text" id="depart_at" name="depart_at" class="form-control" value="<%= @flight.depart_at %>">
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @flight.description %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
