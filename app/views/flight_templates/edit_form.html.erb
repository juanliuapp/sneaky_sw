<h1>
  Edit flight #<%= @flight.id %>
</h1>

<hr>

<form action="/update_flight/<%= @flight.id %>" method="post">

  <div class="form-group">
    <label for="depart_at">
      Depart at
    </label>

    <input type="text" id="depart_at" name="depart_at" class="form-control" value="<%= @flight.depart_at %>">
  </div>


  <div class="form-group">
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description" class="form-control" rows="3"><%= @flight.description %></textarea>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
