<h1>
  Edit flight #<%= @flight.id %>
</h1>

<hr>

<!-- Form flight start -->
<form action="/update_flight/<%= @flight.id %>" method="post">
<!-- Form flight end -->

  <!-- Label and input for depart_at start -->
  <div class="form-group">
    <label for="depart_at">
      Depart at
    </label>

    <!-- Input for depart_at start -->
    <input type="text" id="depart_at" name="depart_at" class="form-control" value="<%= @flight.depart_at %>">
    <!-- Input for depart_at end -->
  </div>
  <!-- Label and input for depart_at end -->

  <!-- Label and input for user_id start -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <!-- Input for user_id start -->
    <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @flight.user_id), :class => "form-control") %>
    <!-- Input for user_id end -->
  </div>
  <!-- Label and input for user_id end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <textarea id="description" name="description" class="form-control" rows="3"><%= @flight.description %></textarea>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <button class="btn btn-block btn-outline-secondary">
    Update flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
